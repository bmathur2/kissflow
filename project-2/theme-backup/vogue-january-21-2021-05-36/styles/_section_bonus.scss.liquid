// Bonus
// ======================================

.bonus {

  &.section__column-layout__two-column {
    @include screen-lg-min {

      .section__content {
        padding-left: 0;
      }
    }
  }

  .section__subheading {
    font-size: modular-scale(1);
  }
}

.bonus__container {
  @include make-container;
}

.bonus__wrapper {
  @include make-row(true);
}

.bonus__list-item {
  margin: 0 0 $gutter-width;
  padding: 0 0 $gutter-width / 2;
  border-bottom: $interface__border;

  &:last-of-type {
    margin: 0;
    padding: 0;
    border-bottom: 0;
  }

  h3,
  h4 {
    font-family: $body__font-family;
  }

  h3 {
    margin: 0 0 $gutter-width / 2;
    font-size: 1.5rem;
    font-weight: 400;
  }

  h4 {
    @include screen-md-min {
      font-size: 1.125rem;
    }
    color: $accent__color;
    font-size: 1rem;
    font-weight: bold;
  }
}
