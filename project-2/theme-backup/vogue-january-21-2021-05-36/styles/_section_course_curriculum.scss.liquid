// Course Curriculum
// ======================================

.course-curriculum {

  .section__headings {
    margin: 0 0 $gutter-width * 2;
  }
}

.course-curriculum__container {
  @include make-container;
}

.course-curriculum__chapter-list {
  @include make-row(false);

  .course-curriculum__chapter {
    @include screen-md-min {
      padding-right: $gutter-width * 2;
    }

    padding-right: $gutter-width / 2;
    padding-left: 0;
  }

  list-style: none;
}

.course-curriculum__chapter-header {
  position: relative;
  margin: 0;
  cursor: pointer;

  button {
    border: 0;
    background-color: transparent;
  }

  &.collapse {
    .course-curriculum__chapter-title {
      position: relative;

      &:after {
        @include transition(opacity 200ms ease);

        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 65%;
        opacity: 1;
        z-index: z-index(element--background);
      }
    }

    .course-curriculum__chapter-collapse {
      &:after {
        content: "\f067";
      }
    }

    .course-curriculum__chapter-content {
      opacity: 0;
    }
  }
}

.course-curriculum__chapter-content {
  @include transition(opacity 200ms ease);

  margin-top: $gutter-width;
  padding: $gutter-width 0;
  border-top: $interface__border;
  list-style: none;

  a {
    text-decoration: none;

    &:active,
    &:hover {
      text-decoration: underline;
    }
  }

  li {
    position: relative;
    margin-bottom: 1em;
    line-height: 1.5;
  }
}

.course-curriculum__chapter {
  @include screen-lg-min {
    @include make-col(6);

    &:nth-child(odd) {
      border-right: 0;

      &:last-child {
        @include make-col(12, false);

        border-top: 0;
        border-right: $interface__border;
      }

      &:first-child {
        border-top: $interface__border;
      }
    }

    &:nth-child(even) {
      &:nth-child(2) {
        border-top: $interface__border;
      }
    }

    &:nth-child(even),
    &:nth-child(odd) {
      border-top: 0;
    }
  }
  @include make-col(12);
  @include display(flex);

  padding-top: $gutter-width;
  padding-bottom: $gutter-width;
  border: $interface__border;
  background-color: $interface__background-color;
  line-height: 1;
}

.course-curriculum__chapter-number {
  @include screen-md-min {
    padding: 0 $gutter-width;
  }
  padding: 0 $gutter-width / 2;
  color: inherit;
  font-family: $heading__font-family;
  font-size: modular-scale(4);
  font-weight: bold;
  white-space: nowrap;
  opacity: 0.8;
}

.course-curriculum__chapter-content-wrapper {
  @include flex-grow(1);

  overflow: hidden;

  ul {
    margin-left: 0;
    list-style: none;
  }
}

.course-curriculum__chapter-title {
  position: relative;
  margin: 0;
  padding-top: $gutter-width / 2.5;
  padding-right: $gutter-width;
  font-family: $body__font-family;
  font-size: 1.5rem;

  &:after {
    content: "";
    opacity: 0;
  }
}

.course-curriculum__chapter-collapse {
  position: absolute;
  top: $gutter-width / 2;
  right: 0;
  z-index: z-index(element--middleground);

  &:after {
    color: inherit;
    font-family: $icon__font-family;
    font-style: normal;
    content: "\f068";
  }
}

.course-curriculum__lesson-title {
  display: flex;
  flex-wrap: wrap;
  align-items: center;

  p {
    margin: 4px 0;
    padding-right: 1rem;
  }
}

.course-curriculum__chapter-lesson {
  display: flex;

  &--free {
    margin: 4px 0;
    padding: 5px 8px;
    border-radius: 5px;
    background-color: $accent__color;
    color: dynamic-contrast-color($accent__color);
    font-size: 0.875rem;
    font-weight: $heading__font-weight;
    line-height: 1;
    text-transform: uppercase;
  }

  i {
    margin: 4px 0;
    padding-right: 1rem;
    color: $accent__color;
    font-size: 1.5rem;
    vertical-align: sub;
  }
}
