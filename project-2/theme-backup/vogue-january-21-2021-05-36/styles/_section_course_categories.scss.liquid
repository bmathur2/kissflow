// Course Categories
// ======================================

.course-categories__container {
  @include make-container;
}

.course-category__list {
  @include make-row(true);
  @include justify-content(center);
}

.course-category__list-item {
  @include screen-sm-min {
    max-width: 384px;
  }
  @include screen-lg-min {
    max-width: 400px;
  }
  @include make-col(12);

  max-width: 320px;
  padding-bottom: $gutter-width;
}

.course-category-card {
  @include card;
  margin: 0 auto;

  &:hover {
    cursor: pointer;
  }
}

.course-category-card__img-container {
  position: relative;

  &:after {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: $interface__background-color;
    line-height: 206px;
    text-align: center;
    content: "";
    opacity: 0.6;
    z-index: z-index(element--middleground);
  }

  a {
    display: block;
    position: relative;
    height: 100%;
  }

  p {
    @include transform(translatey(-50%));

    position: absolute;
    top: 50%;
    width: 100%;
    color: dynamic-contrast-color($interface__background-color);
    font-size: 1.125rem;
    font-weight: bold;
    line-height: 1.25;
    text-align: center;
    z-index: z-index(element--foreground);
  }
}

.course-category-card__img {
  display: block;
  width: 100%;
  height: 206px;
  background-color: #f7f7f7;
}

.course-category-card__details {
  @include make-row(false);

  margin-top: auto;
  margin-right: 0;
  margin-left: 0;
  font-size: 0;
  line-height: 1;

  & > * {
    @include make-col(6);

    display: inline-block;
    padding: 10px;
    border-top: $interface__border;
    border-right: $interface__border;
    border-bottom: 0;
    font-size: 0.875rem;
    font-weight: 600;
    line-height: 1.4rem;
    text-align: center;

    &:only-child,
    &:last-child {
      border-right: 0;
    }

    &:only-child {
      @include make-col(12);
    }
  }
}

.course-category-card__course-count,
.course-category-card__lesson-time {
  padding: 1rem;
  font-size: 0.75rem;
  font-weight: 400;
  line-height: 1;

  strong {
    display: block;
    font-size: 0.875rem;
  }
}
