// Upsells
// ======================================

.upsells {

  .section__headings {
    margin: 0 0 $gutter-width;
  }
}

.upsells__container {
  @include make-container;
}

.upsells__wrapper {
  @include make-row(true);
}

.upsells__list-item {
  @include screen-md-min {
    padding-left: 5rem;
  }
  @include make-row(false);
  @include align-items(flex-start);

  position: relative;
  padding: $gutter-width 0;
  border-bottom: $interface__border;

  &:last-of-type {
    border-bottom: 0;
  }

  .fa {
    @include screen-sm-max {
      display: none;
    }
    position: absolute;
    top: 2.25rem;
    left: 1.5rem;
    font-size: modular-scale(1);
  }
}

.upsells__details {
  @include screen-md-min {
    @include make-col(9, false);
  }
  @include make-col(10, false);
  @include make-row(false);
}

.upsells__details__wrapper {
  @include screen-sm-max {
    @include make-col(12, false);

    padding: 0;
  }
  @include make-col(9);
}

.upsells__price {
  @include screen-sm-max {
    display: none;
  }
  @include make-col(3, false);

  margin: 0;
  font-family: $heading__font-family;
  font-size: modular-scale(1);
  font-weight: bold;
}

.upsells__title {
  margin: 0;
  font-size: modular-scale(1);
}

.upsells__title__price {
  @include screen-sm-max {
    display: inline-block;
  }

  display: none;
  position: relative;
  margin-right: $gutter-width / 2;

  &:after {
    @include transform(translatey(-50%));

    display: block;
    position: absolute;
    top: 50%;
    right: $gutter-width / -2.5;
    width: $gutter-width / 4;
    height: 2px;
    content: "";
  }
}

.upsells__description {
  padding-top: $gutter-width / 3;
}

.upsells__buy {
  @include screen-sm-max {
    @include align-self(center);
  }
  @include screen-md-min {
    @include make-col(3);

    text-align: right;
  }
  @include make-col(2);

  margin-right: 0;
  margin-left: auto;

  .button {
    @include screen-sm-max {
      width: $gutter-width * 1.5;
      height: $gutter-width * 1.5;
      border-radius: 50%;
      font-size: 0;

      &:before {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        color: $button__primary-color;
        font-family: $icon__font-family;
        font-size: $gutter-width / 1.5;
        letter-spacing: -3px;
        line-height: 2.2;
        content: "\f054";
      }
    }
    @include screen-md-min {
      min-width: 8rem;
    }

    position: relative;
  }

  .button-secondary {

    &:before {
      color: $button__secondary-color;
    }
  }
}
